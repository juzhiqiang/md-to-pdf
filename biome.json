{
    "$schema": "https://biomejs.dev/schemas/2.4.4/schema.json",
    "files": {
        "includes": [
            "apps/**",
            "packages/**",
            "*.json"
        ]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 2,
        "lineWidth": 100
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "asNeeded"
        }
    }
}